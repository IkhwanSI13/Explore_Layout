<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CustomInputLayout">
        <attr name="error" format="string" />
        <attr name="errorBackgroundColor" format="color" />
        <attr name="errorTextColor" format="color" />
        <attr name="errorEnable" format="boolean" />
        <attr name="fieldTint" format="color" />
        <attr name="fieldBackground" format="reference" />
        <attr name="drawableRight" format="reference" />
        <attr name="drawableLeft" format="reference" />
        <attr name="drawableTint" format="color" />
        <attr name="isSpinner" format="boolean" />
        <attr name="hint" format="string" />
        <attr name="hintAnimation" format="boolean" />
        <!--<attr name="hintColor" format="color" />-->
        <attr name="units" format="string" />
        <attr name="unitsColor" format="color" />
        <attr name="isFocusable" format="boolean" />
        <attr name="viewOnly" format="boolean" />
        <attr name="maxLength" format="integer" />
        <attr name="text" format="string" />
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="singleLine" format="boolean" />
        <attr name="fieldInputType">
            <flag name="number" value="2" />
            <flag name="phone" value="2" />
            <flag name="email" value="33" />
            <flag name="numberDecimal" value="8194" />
            <flag name="password" value="129" />
            <flag name="capCharacters" value="4096" />
            <flag name="capSentences" value="16384" />
            <flag name="capWords" value="8192" />
            <flag name="multiline" value="131072" />
        </attr>
        <attr name="entries" format="reference" />
        <attr name="android:gravity" />

        <attr name="android:padding" />
        <attr name="android:paddingRight" />
        <attr name="android:paddingLeft" />
        <attr name="android:paddingTop" />
        <attr name="android:paddingBottom" />

        <attr name="digits" format="string" />
        <attr name="currency" format="string" />
    </declare-styleable>

</resources>