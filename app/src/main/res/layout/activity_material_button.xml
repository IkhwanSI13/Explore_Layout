<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="24dp"
            tools:context=".uI.material.MaterialButtonActivity">

        <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_standart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Standart Button enabled" />

        <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_disabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="Standart Button disabled" />

        <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_standart_with_icon"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Standart Button with Icon"
                app:icon="@drawable/ic_email_black_24dp" />

        <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_text"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Text Button" />

        <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_text_with_icon1"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Text Button with Icon"
                app:icon="@drawable/ic_link_black_24dp" />

        <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_text_with_icon2"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Text Button with Icon"
                app:icon="@drawable/ic_link_black_24dp"
                app:iconGravity="end"
                app:iconSize="24dp"
                app:iconTint="@color/colorBlue" />

        <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_outlineButton"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Outlined button" />

        <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_outlineButton2"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Outlined button with Icon"
                app:icon="@drawable/ic_email_black_24dp" />

        <com.google.android.material.button.MaterialButton
                android:id="@+id/material_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Standart Button label enabled" />

        <com.google.android.material.button.MaterialButton
                android:id="@+id/material_unelevated_button"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unelevated button label enabled" />

        <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/toggleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <Button
                    android:id="@+id/toggleButton1"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Btn 1" />

            <Button
                    android:id="@+id/toggleButton2"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Btn 2" />

            <Button
                    android:id="@+id/toggleButton3"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Btn 3" />
        </com.google.android.material.button.MaterialButtonToggleGroup>

        <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/toggleButton2_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <Button
                    android:id="@+id/toggleButton2_1"
                    style="@style/Widget.App.Button.OutlinedButton.IconOnly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_email_black_24dp" />

            <Button
                    android:id="@+id/toggleButton2_2"
                    style="@style/Widget.App.Button.OutlinedButton.IconOnly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_link_black_24dp" />

            <Button
                    android:id="@+id/toggleButton2_3"
                    style="@style/Widget.App.Button.OutlinedButton.IconOnly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_content_copy_black_24dp" />
        </com.google.android.material.button.MaterialButtonToggleGroup>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>