<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".uI.material.ChipActivity">

    <com.google.android.material.chip.Chip
            android:id="@+id/chip_entry"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            app:iconStartPadding="8dp"
            style="@style/Widget.MaterialComponents.Chip.Entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chip Entry"/>

    <com.google.android.material.chip.Chip
            android:id="@+id/chip_filter"
            android:layout_marginTop="12dp"
            android:layout_marginStart="24dp"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chip.Filter"/>

    <com.google.android.material.chip.Chip
            android:id="@+id/chip_choice"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_marginStart="24dp"
            android:layout_width="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_height="wrap_content"
            android:text="Chip.Choice"/>

    <com.google.android.material.chip.Chip
            android:id="@+id/chip_action"
            style="@style/Widget.MaterialComponents.Chip.Action"
            app:iconStartPadding="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chipIcon="@drawable/ic_email_black_24dp"
            android:text="Chip.Action"/>

    <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group"
            android:layout_width="match_parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            app:singleSelection="true"
            android:layout_height="wrap_content">

        <com.google.android.material.chip.Chip
                android:id="@+id/chip_choice1"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_height="wrap_content"
                android:text="Budi Setyo Rahman"/>

        <com.google.android.material.chip.Chip
                android:id="@+id/chip_choice2"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_height="wrap_content"
                android:text="Ani Setia Rahaja"/>

        <com.google.android.material.chip.Chip
                android:id="@+id/chip_choice3"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_height="wrap_content"
                android:text="Tuti Selamat"/>

        <com.google.android.material.chip.Chip
                android:id="@+id/chip_choice4"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_height="wrap_content"
                android:text="Alibar Honggo"/>

    </com.google.android.material.chip.ChipGroup>

    <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:paddingStart="24dp"
            android:layout_marginTop="24dp"
            android:paddingEnd="24dp"
            android:clipToPadding="false">

        <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_horizontal"
                android:layout_width="match_parent"
                app:singleLine="true"
                app:singleSelection="true"
                android:layout_height="wrap_content">

            <com.google.android.material.chip.Chip
                    android:id="@+id/chip_filter1"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_height="wrap_content"
                    android:text="Budi Setyo Rahman"/>

            <com.google.android.material.chip.Chip
                    android:id="@+id/chip_filter2"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_height="wrap_content"
                    android:text="Ani Setia Rahaja"/>

            <com.google.android.material.chip.Chip
                    android:id="@+id/chip_filter3"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_height="wrap_content"
                    android:text="Tuti Selamat"/>

            <com.google.android.material.chip.Chip
                    android:id="@+id/chip_filter4"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_height="wrap_content"
                    android:text="Alibar Honggo"/>

        </com.google.android.material.chip.ChipGroup>

    </HorizontalScrollView>

</LinearLayout>